{
  "name": "vscode-doc-gen",
  "displayName": "Documentation Generator",
  "description": "Generate documentation for staged files using Gemini AI and company guidelines",
  "version": "0.1.0",
  "publisher": "YourPublisherName",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vscode-doc-generator.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Documentation Generator",
      "properties": {
        "docGen.geminiApiKey": {
          "type": "string",
          "description": "API key for Gemini API"
        },
        "docGen.guidelinesPdfPath": {
          "type": "string",
          "description": "Path to the PDF file containing documentation guidelines"
        },
        "docGen.autoPromptForApiKey": {
          "type": "boolean",
          "default": true,
          "description": "Automatically prompt for API key if not set"
        },
        "docGen.temperature": {
          "type": "number",
          "default": 0.2,
          "description": "Temperature setting for Gemini model (0.0 to 1.0)"
        },
        "docGen.maxTokens": {
          "type": "number",
          "default": 2048,
          "description": "Maximum tokens for Gemini model response"
        },
        "docGen.maxDiffLength": {
          "type": "number",
          "default": 10000,
          "description": "Maximum length of diff content to send to Gemini API"
        },
        "docGen.enablePdfGuidelines": {
          "type": "boolean",
          "default": true,
          "description": "Enable using PDF guidelines for documentation generation"
        }
      }
    },
    "commands": [
      {
        "command": "doc-gen.generateDocs",
        "title": "Generate Documentation for Staged Files"
      },
      {
        "command": "doc-gen.configureSettings",
        "title": "Configure Documentation Generator Settings"
      },
      {
        "command": "doc-gen.clearApiKey",
        "title": "Clear Gemini API Key"
      },
      {
        "command": "doc-gen.setGuidelinesPdf",
        "title": "Set Guidelines PDF"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "pdfjs-dist": "^3.11.174",
    "simple-git": "^3.20.0"
  }
}
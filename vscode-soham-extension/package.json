{
  "name": "vscode",
  "displayName": "vscode",
  "description": "vscode extension for testing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Documentation Generator",
      "properties": {
        "docGen.geminiApiKey": {
          "type": "string",
          "description": "API key for Gemini API"
        },
        "docGen.guidelinesPdfPath": {
          "type": "string",
          "description": "Path to the PDF file containing documentation guidelines"
        },
        "docGen.autoPromptForApiKey": {
          "type": "boolean",
          "default": true,
          "description": "Automatically prompt for API key if not set"
        },
        "docGen.temperature": {
          "type": "number",
          "default": 0.2,
          "description": "Temperature setting for Gemini model (0.0 to 1.0)"
        },
        "docGen.maxTokens": {
          "type": "number",
          "default": 2048,
          "description": "Maximum tokens for Gemini model response"
        },
        "docGen.maxDiffLength": {
          "type": "number",
          "default": 10000,
          "description": "Maximum length of diff content to send to Gemini API"
        },
        "docGen.enablePdfGuidelines": {
          "type": "boolean",
          "default": true,
          "description": "Enable using PDF guidelines for documentation generation"
        }
      }
    },
    "commands": [
      {
        "command": "doc-gen.generateDocs",
        "title": "Generate Documentation for Staged Files"
      },
      {
        "command": "doc-gen.configureSettings",
        "title": "Configure Documentation Generator Settings"
      },
      {
        "command": "doc-gen.clearApiKey",
        "title": "Clear Gemini API Key"
      },
      {
        "command": "doc-gen.setGuidelinesPdf",
        "title": "Set Guidelines PDF"
      },
      {
        "command": "http-file-updater.showSidebar",
        "title": "Show HTTP File Updater Sidebar",
        "icon": "$(cloud-upload)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "file-updater-sidebar",
          "title": "HTTP File Updater",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "file-updater-sidebar": [
        {
          "type": "webview",
          "id": "fileUpdateSidebar",
          "name": "File Updates"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "http-file-updater.showSidebar",
          "when": "view == fileUpdateSidebar",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "watch:tsc": "tsc --watch",
    "watch:esbuild": "esbuild src/extension.ts --bundle --outfile=out/extension.js --format=cjs --watch",
    "build": "node esbuild.js",
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "package": "node ./esbuild.js --minify",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^14.15.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "esbuild": "^0.25.1",
    "eslint": "^7.21.0",
    "glob": "^7.1.6",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@bundled-es-modules/pdfjs-dist": "^3.6.172-alpha.1",
    "@google/generative-ai": "^0.24.0",
    "axios": "^1.8.3",
    "pdfjs-dist": "^5.0.375",
    "simple-git": "^3.27.0"
  }
}

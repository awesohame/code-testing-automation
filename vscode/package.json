{
  "name": "vscode",
  "displayName": "vscode",
  "description": "vscode extension for testing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "http-file-updater.showSidebar",
        "title": "Show HTTP File Updater Sidebar",
        "icon": "$(cloud-upload)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "file-updater-sidebar",
          "title": "HTTP File Updater",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "file-updater-sidebar": [
        {
          "type": "webview",
          "id": "fileUpdateSidebar",
          "name": "File Updates"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "http-file-updater.showSidebar",
          "when": "view == fileUpdateSidebar",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "package": "node ./esbuild.js --minify",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^14.15.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "esbuild": "^0.14.0",
    "eslint": "^7.21.0",
    "glob": "^7.1.6",
    "typescript": "^4.3.0"
  }
}